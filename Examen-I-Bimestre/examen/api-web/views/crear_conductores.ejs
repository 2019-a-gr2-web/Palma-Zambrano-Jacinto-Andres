    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>

        html,body{
            font-family:"Century Gothic","Muli", sans-serif !important;
        }
        body{
            padding-top: 100px;
        }

        .btn, .btn-salir {
            border-color: black; border-width: 1px; border-radius: 50px;
            color:black; padding-left: 28px; padding-right: 28px;
        }

        .btn, .btn-salir:hover{
            background-color: #7a1111;color:white;

        }

        .btn-app{
            border-color: black; border-width: 1px; border-radius: 50px;
            background-color: #7a1111;color:white; padding-left: 28px; padding-right: 28px;
            width: 109px;
        }

        .btn-app:hover{
            background-color: #993906;color:white;
        }

    </style>

</head>

<body>
<!--Barra de navegación -->
<section>
    <nav id="nav" class="navbar navbar-expand-lg navbar-light bg-light fixed-top " style="padding-bottom: 10px;">
        <a class="navbar-left">
            <img src="/images/logo_transparent.png" height="70" width="70">
            <a class="navbar-brand"> Examen I Bimestre - APP WEB</a>
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav m-auto">
                <li class="nav-item active" style="padding-right: 60px;">
                    <a>
                        <span>
                            Bienvenido/a: <%= nombre%>
                        </span>

                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto" id="navbarSupportedContent">
                <li id="btn-salir" class="nav-item active">
                    <form action="/examen/eliminarCookie" method="POST">
                        <button  class="btn-salir">Salir
                        </button>
                    </form>

                </li>
            </ul>
        </div>

    </nav>

</section>

<section>
    <h1 style="text-align: center">Formulario de Creación de Conductor</h1>
    <div class="container" >
        <div class="mt-5 d-flex justify-content-center">
            <form action="/examen/crearConductor" method="post">



                <form action="/examen/crearConductor"
                      method="post">

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="nombresConductorId">Nombres </label>
                            <input id="nombresConductorId" name="nombres" type="text" style="width: 400px">
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="apellidosId">Apellidos </label>
                            <input id="nombreConductorId" name="apellidos" type="text" style="width: 400px">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="fechaNacimientoId">Fecha de Nacimiento</label>
                            <input id="fechaNacimientoId" name="fechaNacimiento" type="date" style="width: 300px">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="numAutosId">Numero de Autos</label>
                            <input id="numAutosId" name="numeroAutos" type="number" min="0" style="width: 330px">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 md-auto">
                            <label for="LicenciaId">Licencia Valida</label>
                            <input id="LicenciaId" name="licenciaValida" type="radio" >
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 md-auto">
                            <a href="/examen/conductores">
                                <button class="btn-app"type="button" style="width: 180px">Cancelar</button>
                            </a>
                        </div>
                        <div class="col-sm-6 md-auto">
                            <button class="btn-app" type="button" style="width: 180px">Enviar</button>
                        </div>
                    </div>
                </form>
            </form>
        </div>
    </div>
</section>

</body>
</html>