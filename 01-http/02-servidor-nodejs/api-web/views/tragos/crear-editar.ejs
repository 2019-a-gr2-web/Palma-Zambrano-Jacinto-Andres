
<%- include('../componentes/menu/menu')%>

<%const existeMensaje = mensaje%>
<%if (existeMensaje){%>
    <p>ERROR EN FORMULARIO..!!!</p>
<%}%>
<% const arreglo = ['Ron', 'Vodka', 'Tequila', 'Whiskey', 'Puntas', 'Cervezas'] %>
<% const arregloValues = ['Roncito', 'Vodkita', 'Tequilita', 'Whiskicito', 'Puntitas', 'Chelitas'] %>
<% var creando = typeof trago === "undefined" ? true : false; %>
<h1> <%= creando ? 'Crear' : 'Actualizar' %> Trago</h1>
<p><%= creando ? 'Creando' : 'Actualizando' %> un trago.</p>


<form
        action="/api/traguito/<%= creando ? 'crear' : 'actualizar' %>-trago/<%= creando ? '' : trago.id %>"
        method="post"
>

    <label for="nombreId">Nombre</label>
    <input id="nombreId"
           name="nombre"
           type="text"
           value="<%= creando ? '' : trago.nombre %>">
    <br>

    <label for="tipoId">Tipo trago</label>
    <select name="tipo" id="tipoId">
        <% if(creando){ %>
            <% arreglo.forEach((opcion)=>{ %>
                <option value="<%= opcion %>">
                    <%= opcion %></option>
            <% }) %>
        <% }else{ %>
            <% arreglo.forEach((opcion)=>{ %>
                <option value="<%= opcion %>"
                <% if(trago.tipo.toString() == opcion){ %>
                        selected
                        <% } %>
                ><%= opcion %></option>
            <% }) %>
        <% } %>
    </select>
    <br>

    <label for="gradosId">Grados de alcohol</label>
    <input id="gradosId"
           name="gradosAlcohol"
           type="number"
           min="0"
           max="100"
           step="0.01"
           value="<%= creando ? '' : trago.gradosAlcohol %>"
    >
    <br>

    <label for="fechaCaducidadId">Fecha Caducidad</label>
    <input id="fechaCaducidadId"
           name="fechaCaducidad"
           type="date"
           value="<%= creando ? '' : trago.fechaCaducidad %>"
    >
    <br>

    <label for="precioId">Precio</label>
    <input id="precioId"
           name="precio"
           type="number"
           min="0"
           step="0.01"
           value="<%= creando ? '' : trago.precio %>"
    >
    <br>



    <!--<button type="reset">Reset</button>-->
    <!--<button type="submit">Submit</button>-->


    <a href="/api/traguito/lista">
        <button type="button">Cancelar</button>
    </a>

    <button>Enviar informacion</button>


</form>

<%- include('../componentes/footer/footer')%>